{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",

        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "sourceMap": false,
        "resolveJsonModule": true,

        "rootDir": "lib",
        "outDir": "dist"
    },

    "exclude": ["node_modules", "dist"]
}
